<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
    <channel>
        <title>{{ channel.title }}</title>
        <link>{{ channel.link }}</link>
        <description>{{ channel.description }}</description>
        <language>{{ channel.lang|default('en-en') }}</language>
        <copyright>{{ channel.copyright|default('') }}</copyright>
        <webMaster>{{ channel.webmaster|default('') }}</webMaster>
        {% if channel.image is defined %}
            <image>
                <title>{{ channel.image.title }}</title>
                <url>{{ channel.image.url }}</url>
                <link>{{ channel.image.link }}</link>
                <width>{{ channel.image.width }}</width>
                <height>{{ channel.image.height }}</height>
            </image>
        {% endif %}
        {% for item in channel.items %}
            <item>
                <title>{{ item.title }}</title>
                <description>{{ item.description }}</description>
                <guid isPermaLink='{{ item.isPermalink|default("false") }}'>{{ item.guid }}</guid>
                <pubDate>{{ item.pubDate|date("D, d M Y H:i:s T") }}</pubDate>
            </item>
        {% endfor %}
    </channel>
</rss>
